<h2 class="text-center">Modifier votre compte</h2>
<div class="row">
	<div class="col-md-6 col-md-offset-3">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "on", autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label "Mot de passe" %> <i>(laisser vide si vous ne voulez pas changer votre mot de passe)</i><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label "Confirmer votre mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label "Mot de passe actuel" %> <i>(on a besoin de votre mot de passe actuel pour confirmer les modifications)</i><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Modifier", class:"btn btn-lg btn-primary pull-right" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Pas satisfait? <%= button_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Vous etes sure de supprimer ce compte?" }, class:"btn btn-danger",  method: :delete %></p>

<%= link_to "< Retour", :back %>
</div>
</div>
