
<h2 class="text-center">S'enregistrer</h2>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autocomplete: "on", autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Mot de Passe" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caractÃ¨res minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Confirmer votre mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "S'enregistrer", class:"btn btn-lg btn-primary pull-right" %>
    </div>
  <% end %>

</div>
</div>

<%= render "devise/shared/links" %>
